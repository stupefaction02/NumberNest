unit uHeapSort;

interface

uses
  System.Math, ifIntegerSort;

type
   THeapSort = class(TInterfacedObject, IIntegerSort)
   private
      //FForm1: TForm1;
   public
      procedure Sort(AArray: TArray<Integer>);
   end;

implementation
procedure THeapSort.Sort(AArray: TArray<Integer>);
var
  N: Int64;
  H: Integer;
  I: Integer;
  Temp: Integer;
begin
  H := 0;
  I := 0;
  Temp := 0;

  N := Length(AArray);

  repeat
    begin
        I := N / 2 - 1;
    end;
  until I >= 0;

  for I := H to (N - 1) do

  while H < (N / 3) do
    H := 3 * H + 1;

  SetRoundMode(rmTruncate);


end;
end.
