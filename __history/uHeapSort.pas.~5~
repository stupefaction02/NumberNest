unit uHeapSort;

interface

uses
  System.Math, ifIntegerSort;

type
   THeapSort = class(TInterfacedObject, IIntegerSort)
   public
      procedure Sort(AArray: TArray<Integer>);
   private
      procedure Heapify(AArray: TArray<Integer>; aN: Integer; aI: Integer);
   end;

implementation
procedure THeapSort.Sort(AArray: TArray<Integer>);
var
  N: Int64;
  H: Integer;
  I: Integer;
  Temp: Integer;
begin
  H := 0;
  I := 0;
  Temp := 0;

  SetRoundMode(rmTruncate);

  N := Length(AArray);

  repeat
    begin
        I := Round( N / 2 ) - 1;

        Heapify(AArray, N, I);
    end;
  until I >= 0;

  for I := H to (N - 1) do

  while H < (N / 3) do
    H := 3 * H + 1;




end;

procedure THeapSort.Heapify(AArray: TArray<Integer>; aN: Integer; aI: Integer);
begin

end;
end.
